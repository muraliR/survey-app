<%= form_for @survey, url: "/surveys/#{@survey.id}", method: :put, html: { style: "width:25%;"}  do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter Title", value: @survey.title %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>

